generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(USER)
  updatedAt DateTime @updatedAt
}

model Book {
  id        Int      @id @default(autoincrement())
  name      String
  writer    String
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([writer])
}

enum Role {
  USER
  ADMIN
}
